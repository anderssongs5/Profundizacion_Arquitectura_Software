<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.1"
              xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
                http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd">
        
    <managed-bean>
        <managed-bean-name>productManagedBean</managed-bean-name>
        <managed-bean-class>co.edu.udea.profarq.labcinco.controller.ProductManagedBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>CREATE_PRODUCT</from-outcome>
            <to-view-id>/createProduct.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>UPDATE_PRODUCT</from-outcome>
            <to-view-id>/updateProduct.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>FOUND_PRODUCT</from-outcome>
            <to-view-id>/foundProduct.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/createProduct.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>HOME</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/updateProduct.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>HOME</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/foundProduct.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>HOME</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
